<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/movie_details_movie_img_height"

        app:cardCornerRadius="@dimen/movie_details_movie_img_corner_radius"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/move_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scaleType="centerCrop"

            android:src="@drawable/test_img"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

             />
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="@dimen/movie_details_bottom_sheet_dialog_margin_top"

        android:background="@drawable/shape_bottom_sheet_dialog"
        android:elevation="@dimen/movie_details_bottom_sheet_dialog_elevation"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/movie_details_rating"
                android:layout_height="@dimen/movie_details_rating"

                android:layout_marginTop="@dimen/movie_details_rating_margin_top"
                android:layout_marginEnd="@dimen/start_margin"

                android:background="@drawable/shape_txt_age_limit"

                android:gravity="center"

                style="@style/Text"
                android:text="@string/movie_details_txt_rating"
                android:textSize="@dimen/normal_txt_size"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="@dimen/movie_details_data_margin_start"

                style="@style/Text"
                android:text="@string/movie_details_txt_data"
                android:textSize="@dimen/small_txt_size"

                app:layout_constraintBottom_toBottomOf="@+id/txt_genre"
                app:layout_constraintStart_toEndOf="@+id/txt_genre"
                app:layout_constraintTop_toTopOf="@+id/txt_genre"
                />

            <TextView
                android:id="@+id/txt_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="@dimen/start_margin"
                android:layout_marginTop="@dimen/movie_details_genre_margin_top"
                android:layout_marginBottom="@dimen/movie_details_genre_margin_bottom"

                android:background="@drawable/shape_txt_genre"


                android:text="@string/movie_details_genre"
                style="@style/Text"
                android:textSize="@dimen/very_small_txt_size"

                app:layout_constraintBottom_toTopOf="@+id/txt_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="@dimen/start_margin"
                android:layout_marginBottom="@dimen/movie_details_title_margin_bottom"

                style="@style/Text"
                android:text="@string/movie_details_title_of_move"
                android:textSize="@dimen/movie_details_title_txt_size"

                app:layout_constraintBottom_toTopOf="@+id/star_1"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/star_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="@dimen/start_margin"

                android:layout_marginBottom="@dimen/movie_details_star_margin_bottom"

                android:src="@drawable/ic_star_filled"

                app:layout_constraintBottom_toTopOf="@+id/description"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/star_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/ic_star_filled"

                app:layout_constraintTop_toTopOf="@+id/star_1"
                app:layout_constraintStart_toEndOf="@+id/star_1"
                app:layout_constraintBottom_toBottomOf="@+id/star_1"
                />

            <ImageView
                android:id="@+id/star_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/ic_star_filled"

                app:layout_constraintTop_toTopOf="@+id/star_2"
                app:layout_constraintStart_toEndOf="@+id/star_2"
                app:layout_constraintBottom_toBottomOf="@+id/star_2"/>

            <ImageView
                android:id="@+id/star_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/ic_star_filled"

                app:layout_constraintTop_toTopOf="@+id/star_3"
                app:layout_constraintStart_toEndOf="@+id/star_3"
                app:layout_constraintBottom_toBottomOf="@+id/star_3"/>

            <ImageView
                android:id="@+id/star_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/ic_star_unfilled"

                app:layout_constraintTop_toTopOf="@+id/star_4"
                app:layout_constraintStart_toEndOf="@+id/star_4"
                app:layout_constraintBottom_toBottomOf="@+id/star_4"/>


            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="@dimen/start_margin"
                android:layout_marginBottom="@dimen/movie_details_description_margin_bottom"

                android:text="@string/movie_details_description"
                style="@style/Text"
                android:textSize="@dimen/movie_details_description_txt_size"

                app:layout_constraintBottom_toTopOf="@+id/txt_actors"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                />

            <TextView
                android:id="@+id/txt_actors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="@dimen/start_margin"

                android:text="@string/movie_details_txt_actors"
                style="@style/Text"
                android:textSize="@dimen/movie_details_txt_actor_text_size"

                app:layout_constraintBottom_toTopOf="@+id/rv_actors"
                app:layout_constraintStart_toStartOf="parent" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_actors"
                android:layout_width="match_parent"
                android:layout_height="@dimen/movie_details_rv_actors_height"

                android:layout_marginBottom="@dimen/movie_details_rx_actors_margin_bottom"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>