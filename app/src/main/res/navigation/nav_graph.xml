<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_graph"
    app:startDestination="@id/movieList">

    <fragment
        android:id="@+id/movieDetails"
        android:name="com.kudashov.mtsteta_project.screens.movieDetail.MovieDetails"
        android:label="MovieDetails">
        <action
            android:id="@+id/action_move_details_to_movie_list"
            app:destination="@id/movieList" />
        <action
            android:id="@+id/action_movieDetails_to_profile"
            app:destination="@id/profile"
            app:popUpTo="@id/movieList" />
    </fragment>
    <fragment
        android:id="@+id/movieList"
        android:name="com.kudashov.mtsteta_project.screens.movieList.MovieList"
        android:label="MovieList" >
        <action
            android:id="@+id/action_movie_list_to_move_details"
            app:destination="@id/movieDetails" />
        <action
            android:id="@+id/action_movieList_to_profile"
            app:destination="@id/profile" />
    </fragment>
    <fragment
        android:id="@+id/profile"
        android:name="com.kudashov.mtsteta_project.screens.profile.Profile"
        android:label="Profile" >
        <action
            android:id="@+id/action_profile_to_movieList"
            app:destination="@id/movieList" />
    </fragment>
</navigation>